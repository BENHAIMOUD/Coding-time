import java.util.Timer;

public class TestFunction {
    static  String  joinString(String [] words){
        String sentence = "";
        for (String elt: words){
            sentence+= elt;
        }

        return sentence;
    }
    static  String  joinString_(String [] words){
        StringBuilder sentence = new StringBuilder();
        for(String elt: words){
            sentence.append(elt);
        }
        return sentence.toString();
    }
    public static void main(String [] argc){
        System.out.println();
        String [] words={"Hi", "salwa", "How are you"};
        System.out.println(joinString_(words));


    }
}
